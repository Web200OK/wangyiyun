.header{
    width: 100%;
    height: 300rpx;
    position: relative;
}
.header image{
    width: 100%;
    height: 100%;
}
.date{
    width: 300rpx;
    height: 100rpx;
    color: white;
    font-size:50rpx;
    margin:10rpx 0 0 10rpx;  
    text-align: center;
    line-height: 100rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

/* 列表区域 */
.ListContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
  }
  .listHeader {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 29rpx
  }
  .listHeader .changeMore {
    float: right;
    font-size: 29rpx
  }
  
  
  /* 内容区 */
  .listScroll {
    height: calc(100vh - 380rpx);
  }
  .scrollItem {
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
  }
  .scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
  }
  
  .musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
  
  }
  
  .musicInfo text {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  
  .scrollItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
  }